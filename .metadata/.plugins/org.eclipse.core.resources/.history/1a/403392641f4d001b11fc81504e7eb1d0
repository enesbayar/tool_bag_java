package toolbag;

import javax.swing.*;  
import java.awt.event.*;  
import java.net.*;  
public class IPFinderPage extends JFrame {  
    JLabel lblUrl;  
    JTextField 	textField;  
    JButton btn;  
    IPFinderPage(){  
    	super("IP Finder");
    	setUndecorated(true);
		setResizable(false);
    	lblUrl=new JLabel("Enter URL:");  
    	lblUrl.setBounds(50,70,150,40);;  
    	textField=new JTextField();  
    	textField.setBounds(50,100,200,20);  
      
    	btn=new JButton("Find IP");  
    	btn.setBounds(50,150,80,30);  
    	btn.addActionListener(this);  
    	getContentPane().add(lblUrl);  
    	getContentPane().add(textField);  
    	getContentPane().add(btn);  
    	setSize(600,600);  
    	getContentPane().setLayout(null);  
    	setVisible(true);  
}  
    
    
    public static void main(String[] args) {
		IPFinderPage ip = new IPFinderPage();
	}
	public void actionPerformed(ActionEvent e) {
		String url=textField.getText();  
    	try {  
    		InetAddress ia=InetAddress.getByName(url);  
    		String ip=ia.getHostAddress();  
    		JOptionPane.showMessageDialog(this,ip);  
    	} catch (UnknownHostException e1) {  
    		JOptionPane.showMessageDialog(this,e1.toString());  
    	}  
	}
}  