package toolbag;

import java.awt.*;  
import java.awt.event.*;  
import java.io.InputStream;  
import java.net.*;  

import javax.swing.ImageIcon;
import javax.swing.JLabel;
public class SourceCodeGenerator extends Frame implements ActionListener{  
	
    private TextField textField;  
    private TextArea textArea;  
    private Button btnGetSourceCode;  
    private Label lblEnterUrl;
    private JLabel lblWallpaper;
    private Button btnHomePage;
    
    SourceCodeGenerator(){  
        super("Source Code Generator");
        setUndecorated(true);
    	setResizable(false);
    	
        lblEnterUrl=new Label("Enter URL:");  
        lblEnterUrl.setBounds(50,50,50,20);  
          
        textField=new TextField();  
        textField.setBounds(120,50,250,20);  
          
        btnGetSourceCode=new Button("Get Source Code");  
        btnGetSourceCode.setBounds(120, 100,120,30);  
        btnGetSourceCode.addActionListener(this);  
          
        textArea=new TextArea();  
        textArea.setBounds(120,150,250,150);  
        
        lblWallpaper = new JLabel("");
    	lblWallpaper.setIcon(new ImageIcon(WCC.class.getResource("/wallpaper.jpg")));
    	lblWallpaper.setBounds(0, 0, 600, 600);
    	
    	add(lblWallpaper); 
    	add(btnHomePage);
        add(lblEnterUrl);
        add(textField);
        add(btnGetSourceCode);
        add(textArea);  
        setSize(600,600);  
        setLayout(null);  
        setVisible(true);  
    }  
    public void actionPerformed(ActionEvent e){  
        String s=textField.getText();  
        if(s==null){}  
        else{  
            try{  
            URL u=new URL(s);  
            URLConnection uc=u.openConnection();  
          
            InputStream is=uc.getInputStream();  
            int i;  
            StringBuilder sb=new StringBuilder();  
            while((i=is.read())!=-1){  
                sb.append((char)i);  
            }  
            String source=sb.toString();  
            textArea.setText(source);  
            }catch(Exception ex){System.out.println(e);}  
        }  
    }  
    public static void main(String[] args) {  
        new SourceCodeGenerator();  
    }  
}  